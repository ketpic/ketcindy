lenSeg2(p1,[p2]):=block(
 [tmp],
 if length(p2)>0 then
   tmp:(p2[1][1]-p1[1])^2+(p2[1][2]-p1[2])^2
 else
   tmp:(p1[1])^2+(p1[2])^2,
 ratsimp(tmp)
)$
lenSeg(p1,[p2]):=block(
 [tmp],
 if length(p2)>0 then
   tmp:(p2[1][1]-p1[1])^2+(p2[1][2]-p1[2])^2
 else
   tmp:(p1[1])^2+(p1[2])^2,
 ratsimp(sqrt(tmp))
)$
vect(A,B):=ratsimp(B-A)$
ptDirSeg(A,B,t):=ratsimp([A[1]+t*(B[1]-A[1]),A[2]+t*(B[2]-A[2])])$

